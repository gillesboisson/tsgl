{
  "name": "tsgl",
  "version": "0.0.1",
  "main": "index.js",
  "private": true,
  "contributors": [
    "Gilles Boisson <gilles@scopopop.com>"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "clean": "lerna clean && rm -rf ./node_modules && lerna run clean",
    "build:production": "lerna run build:production",
    "build:dev": "lerna run build:dev",
    "build:tsgl:dev": "lerna run --scope '@tsgl/*' build:dev",
    "build:tsgl:production": "lerna run --scope '@tsgl/*' build:production"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": {
    "packages": [
      "app/**",
      "tsgl/**"
    ]
  },
  "npmClient": "yarn",
  "useWorkspaces": true
}
