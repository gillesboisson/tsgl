{
  "exclude": [ "node_modules", "build"],
  "include": [
    "src",
    "types"
  ],
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "lib": [
      "webworker", 
      "es2019",
      "dom",
      "esnext"
    ],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "build",
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
  }
}
