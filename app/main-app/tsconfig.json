{
  "exclude": [ "node_modules", "build"],
  "include": ["src"],
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "experimentalDecorators": true,
    "lib": ["webworker", "es2019", "dom"]
  }
}
